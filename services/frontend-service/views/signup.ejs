<section class="flex min-h-screen items-center justify-center px-6 py-20">
  <div class="w-full max-w-md">

    <!-- Logo -->
    <div class="mb-10 text-center">
      <a href="/" class="inline-flex items-center gap-2.5">
        <svg width="36" height="36" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path d="M16 2L28 9V23L16 30L4 23V9L16 2Z" stroke="#38bdf8" stroke-width="1.5" fill="none"/>
          <circle cx="16" cy="16" r="3" fill="#38bdf8"/>
        </svg>
        <span class="text-xl font-bold tracking-tight text-kube-heading">KubeLearn</span>
      </a>
      <h1 class="mt-6 text-2xl font-bold text-kube-heading">Create your account</h1>
      <p class="mt-2 text-sm text-kube-muted">Already have an account? <a href="/login" class="text-kube-primary hover:underline">Sign in</a></p>
    </div>

    <!-- Error message -->
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="mb-6 rounded-lg border border-red-500/30 bg-red-500/10 px-4 py-3 text-sm text-red-400">
        <div class="flex items-center gap-2">
          <svg class="size-4 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          <% if (error === '1') { %>
            Please fill in all fields.
          <% } else if (error === '2') { %>
            Passwords do not match.
          <% } else if (error === '3') { %>
            Password must be at least 6 characters.
          <% } else if (error === '4') { %>
            Username must be at least 3 characters.
          <% } else if (error === '5') { %>
            Username already exists. Please choose another.
          <% } else { %>
            An error occurred. Please try again.
          <% } %>
        </div>
      </div>
    <% } %>

    <!-- Form -->
<form action="/signup" method="POST" class="rounded-xl border border-kube-border bg-kube-surface p-8">
      <div class="flex flex-col gap-5">

        <!-- Username -->
        <div>
          <label for="username" class="mb-1.5 block text-sm font-medium text-kube-heading">Username</label>
          <div class="relative">
            <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 text-kube-muted">
              <svg class="size-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
            </span>
            <input
              type="text"
              id="username"
              name="username"
              required
              autocomplete="username"
              placeholder="choose_username"
              minlength="3"
              class="w-full rounded-lg border border-kube-border bg-kube-bg py-2.5 pl-10 pr-4 text-sm text-kube-heading placeholder-kube-muted/50 outline-none transition-colors focus:border-kube-primary focus:ring-1 focus:ring-kube-primary"
            />
          </div>
          <p class="mt-2 text-xs text-kube-muted">Username must be at least 3 characters</p>
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="mb-1.5 block text-sm font-medium text-kube-heading">Password</label>
          <div class="relative">
            <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 text-kube-muted">
              <svg class="size-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
            </span>
            <input
              type="password"
              id="password"
              name="password"
              required
              autocomplete="new-password"
              placeholder="create_password"
              minlength="6"
              class="w-full rounded-lg border border-kube-border bg-kube-bg py-2.5 pl-10 pr-4 text-sm text-kube-heading placeholder-kube-muted/50 outline-none transition-colors focus:border-kube-primary focus:ring-1 focus:ring-kube-primary"
            />
          </div>
          <p class="mt-2 text-xs text-kube-muted">Password must be at least 6 characters</p>
        </div>

        <!-- Confirm Password -->
        <div>
          <label for="confirmPassword" class="mb-1.5 block text-sm font-medium text-kube-heading">Confirm Password</label>
          <div class="relative">
            <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 text-kube-muted">
              <svg class="size-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
            </span>
            <input
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              required
              autocomplete="new-password"
              placeholder="confirm_password"
              minlength="6"
              class="w-full rounded-lg border border-kube-border bg-kube-bg py-2.5 pl-10 pr-4 text-sm text-kube-heading placeholder-kube-muted/50 outline-none transition-colors focus:border-kube-primary focus:ring-1 focus:ring-kube-primary"
            />
          </div>
        </div>

        <!-- Submit -->
        <button
          type="submit"
          class="mt-2 w-full rounded-lg bg-kube-primary py-2.5 text-sm font-medium text-kube-bg transition-colors hover:bg-kube-primary/90"
        >
          Create Account
        </button>
      </div>
    </form>

    <!-- Back link -->
    <p class="mt-6 text-center text-sm text-kube-muted">
      <a href="/" class="inline-flex items-center gap-1 transition-colors hover:text-kube-heading">
        <svg class="size-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
        Back to homepage
      </a>
    </p>

  </div>
</section>
